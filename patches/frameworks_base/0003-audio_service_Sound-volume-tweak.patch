-        15, // STREAM_TTS
-        15  // STREAM_FM
+        6,  // STREAM_VOICE_CALL
+        8,  // STREAM_SYSTEM
+        8,  // STREAM_RING
+        20, // STREAM_MUSIC
+        8,  // STREAM_ALARM
+        8,  // STREAM_NOTIFICATION
+        20, // STREAM_BLUETOOTH_SCO
+        8,  // STREAM_SYSTEM_ENFORCED
+        20, // STREAM_DTMF
+        20, // STREAM_TTS
+        15  // STREAM_FM
